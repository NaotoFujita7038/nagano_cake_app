<h3>注文履歴一覧</h3>
<div class="container">
 <div class="row">
   <div class="col">
  <table class=table border="1">
    <thead>
      <tr>
        <th  class="table-secondary w-25">注文日</th>
        <th  class="table-secondary w-25">配送先</th>
        <th  class="table-secondary w-25">注文商品</th>
        <th  class="table-secondary w-25">支払金額</th>
        <th  class="table-secondary w-25">注文詳細</th>
      </tr>
      
      
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.to_s(:datetime_jp) %></td>
          <td>
            <%= order.postal_code %><br/>
            <%= order.name %>
            </td>
            
          
          <td>
            <% order.order_details.each do |order_detail| %>
            <%=order_detail.item.name %><br>
            
            <% end %>
          </td>
          <td><%= "#{order.total_price.to_s(:delimited)}" %>円</td>
          <td><%= link_to '表示する', order_path(order.id), class: "btn btn-primary" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
</div>
</div>
